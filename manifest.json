{
  "manifest_version": 3,
  "name": "LinkedIn AI Prompt Remover",
  "version": "1.0",
  "description": "Removes the AI prompt suggestion from each post on LinkedIn.",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "run_at": "document_end",
      "matches": ["https://www.linkedin.com/*"]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {}
}
